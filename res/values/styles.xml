<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_back</item>
    </style>

    <style name="myProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="InfoTitle">
        <item name="android:textSize">@dimen/info_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/info_title_margin_top</item>
    </style>

    <style name="InfoContent">
        <item name="android:textSize">@dimen/info_content_size</item>
        <item name="android:textColor">@color/content_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DimPanel" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@*android:style/Animation.InputMethod</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Menu">
        <item name="android:windowEnterAnimation">@anim/menu_in</item>
        <item name="android:windowExitAnimation">@anim/menu_out</item>
    </style>

    <style name="FwUpgradeAnim">
        <item name="android:windowEnterAnimation">@anim/fw_in</item>
        <item name="android:windowExitAnimation">@anim/fw_out</item>
    </style>

    <style name="NoneTransition">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="MainActivityStyle">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="MenuPanel" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/Menu</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FwUpgradePanel" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/FwUpgradeAnim</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomActionBarStyle" parent="@android:style/Widget.ActionBar">
        <item name="android:background">@color/default_circle_indicator_page_color</item>
    </style>

    <style name="drawerMenuButton">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff9da1a2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_drawer_menu</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="drawerMenuButton2">
        <item name="android:textSize">16.0dip</item>
        <item name="android:textColor">#ff4a4a4a</item>
        <item name="android:gravity">left|center</item>
        <item name="android:background">@drawable/btn_drawer_menu</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">50.0dip</item>
        <item name="android:drawablePadding">8.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="CustomTitlePageIndicator">
        <item name="android:textColor">#ff838383</item>
        <item name="android:background">#fff2f2f2</item>
        <item name="selectedColor">#ffe6691e</item>
        <item name="footerColor">#ffffffff</item>
        <item name="footerIndicatorHeight">3.0dip</item>
        <item name="selectedBold">true</item>
        <item name="leftPadding">80.0dip</item>
        <item name="rightPadding">80.0dip</item>
    </style>

    <style name="LikeAvatar">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/like_person_avatar_margin</item>
        <item name="android:layout_marginRight">@dimen/like_person_avatar_margin</item>
    </style>

    <style name="AlarmCheckItemLeft">
        <item name="android:textSize">@dimen/info_content_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/checked_text_bg_left</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:checkable">true</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="AlarmCheckItem">
        <item name="android:textSize">@dimen/info_content_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/checked_text_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:checkable">true</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="AlarmCheckItemRight">
        <item name="android:textSize">@dimen/info_content_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/checked_text_bg_right</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:checkable">true</item>
        <item name="android:selectable">true</item>
    </style>

    <style name="FwUpgrade" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="ListItemTitleText">
        <item name="android:textSize">@dimen/main_ui_item_title_size</item>
        <item name="android:textColor">@color/main_ui_title_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemValueText">
        <item name="android:textSize">@dimen/info_content_size</item>
        <item name="android:textColor">@color/main_ui_content_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/item_value_margin_right</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BackButton">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">#e6ffffff</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_bar_h</item>
        <item name="android:drawableLeft">@drawable/btn_prev_selector</item>
        <item name="android:drawablePadding">10.0dip</item>
    </style>

    <style name="uiBackButton">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">backnextView</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/action_bar_h</item>
        <item name="android:drawableStart">@drawable/btn_prev_selector</item>
        <item name="android:background">@color/default_circle_indicator_page_color</item>
    </style>

    <style name="topStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:background">@drawable/pic_title_bg</item>
    </style>

    <style name="titleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/bg_color_white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>